@model Hillarys_Pizzeria_Project.Models.Order

@{
    ViewData["Title"] = "CreateTemplate";
}

@{
    if(Cart.IsNotEmpty())
    {
        <p style="font-size: x-large;">Order Contents:</p>
        <hr />
        int i = 0;
        string output;
        foreach (var item in Cart.contents)
        {
            i++;
            output = "Item #" + Convert.ToString(i) + ": ";
            <p style="font-size: large;">
                @output @item.food_name
            </p>
            <p>
                Description: @item.description
            </p>
            <p>
                Price: $@item.price
            </p>
            <hr />
        }
        <p style="font-size: large;">
            Price breakdown:
        </p>
        <p>
            SubTotal: $@Cart.CalculateSubTotal()
        </p>
        <p>
            Tax Due: $@Cart.CalculateTax()
        </p>
        <p>
            Final Total: $@Cart.CalculateTotal()
        </p>

<!-- Auto generated form - START -->


        <p style="font-size: x-large;">Billing information</p>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="GenerateNewOrder" asp-controller="Orders">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" minlength="1" maxlength="20" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" minlength="1" maxlength="20" required/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" minlength="10" maxlength="10" required/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StreetAddress" class="control-label">Street Address</label>
                        <input asp-for="StreetAddress" class="form-control" minlength="1" maxlength="40" required/>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label">City</label>
                        <input asp-for="City" class="form-control" minlength="1" maxlength="36" required/>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="control-label">State</label>
                        <input asp-for="State" class="form-control" minlength="1" maxlength="40" required/>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeliveryInstructions" class="control-label">Delivery Instrutions</label>
                        <input asp-for="DeliveryInstructions" class="form-control" />
                        <span asp-validation-for="DeliveryInstructions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CardNumber" class="control-label">Card Number</label>
                        <input asp-for="CardNumber" class="form-control" minlength="16" maxlength="16" required/>
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpirationDate" class="control-label">Expiration Month</label>
                        <input asp-for="ExpirationDate" class="form-control" required/>
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CVV" class="control-label">CVV</label>
                        <input asp-for="CVV" class="form-control" minlength="3" maxlength="4" required/>
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>
                    <br/>
                    <div asp-validation-summary="ModelOnly" ></div>
                    <div class="form-group">
                        <input type="submit" value="Place Order" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


<!-- Auto generated form - END -->

        
    }
    else
    {
        <p>Nothing to purchase</p> //This honestly should never be reached so you wont need to worry about this too much
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}